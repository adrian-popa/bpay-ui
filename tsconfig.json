{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@invoices/*": ["app/modules/invoices/*"],
      "@statistics/*": ["app/modules/statistics/*"],
      "@core/*": ["app/core/*"],
      "@store/*": ["app/core/store/*"],
      "@services/*": ["app/core/services/*"],
      "@shared/*": ["app/shared/*"],
      "@components/*": ["app/shared/components/*"],
      "@models/*": ["app/shared/models/*"]
    }
  }
}
